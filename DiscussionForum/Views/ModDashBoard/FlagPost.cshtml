@{
}
@model FlagPostViewModel


@section title {
    <div class="row">
        <div class="col-7"><h3>Flag Post</h3></div>
        <div class="col-3"></div>



    </div>
}
@if (Model != null)
{
    <div class="p-3 mt-2 rounded-2 bg-primary-subtle">
        <h6>Subject</h6>
        <p>@Model.PostObject.Subject</p>
        <hr></hr>
        <h6>Content</h6>
        <p>@Model.PostObject.Content</p>
    </div>
    <hr></hr>
    <form method="post" asp-controller="moddashboard" asp-action="flagpost" >
        <input type="hidden" asp-for="PostObject.PostId" />
        <input type="hidden" asp-for="PostObject.Subject" />
        <input type="hidden" asp-for="PostObject.Content" />
        <input type="hidden" asp-for="PostObject.CategoryId" />
        <div class="form-group">
            <label for="SelectedFlag">Flag as:</label>
            <select asp-for="SelectedFlag" class="form-control"
                    asp-items="EnumHelper.GetSelectList<PostFlags>()">
                <option value="">-- Select a flag --</option>
            </select>
        </div>
        <button type="submit" class="btn btn-primary mt-2">Submit</button>
    </form>


}