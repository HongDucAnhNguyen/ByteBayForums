@{
}
@model IEnumerable<Post>

    @if(Model != null && Model.Count() > 0){
        <table class="table">
            <thead>
                <tr>
                    <th>
                        Post Subject
                    </th>
                    <th>Author</th>
                </tr>
            </thead>
            <tbody>
            @foreach(var post in Model){
    <tr class=" product-row " post-id="@post.PostId">
        <td>
                        <a asp-controller="posts" asp-action="edit" asp-route-id="@post.PostId">
                            @post.Subject</a>
                    </td>
                    <td>
                        Anon
                    </td>
    </tr>
}
            </tbody>
        </table>
    }
    else{

        <h5>No posts for this category yet</h5>
    }