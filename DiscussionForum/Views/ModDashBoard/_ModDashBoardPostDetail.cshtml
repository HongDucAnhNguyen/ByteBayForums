@{
}
@model Post
@if (Model != null)
{
    <div class="p-3 mt-2 rounded-2 bg-primary-subtle">
        <h6>Subject</h6>
        <p>@Model.Subject</p>
        <hr></hr>
        <h6>Content</h6>
        <p>@Model.Content</p>
    </div>
    <hr></hr>
    <div class="flex">
        <a asp-controller="moddashboard"
        asp-action="archive" asp-route-id="@Model.PostId">
           

        <button type="submit" class="btn btn-info text-white">Archive this post</button>
        </a>


        <a asp-controller="moddashboard" asp-action="flagpost"
        asp-route-id="@Model.PostId">
            <button type="button" 
                class="btn btn-outline-secondary">Flag this post</button>
        </a>
       @*  <button class="btn btn-danger">Delete this post</button> *@
    </div>
   
    
}